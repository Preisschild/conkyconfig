#######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
if_up_strictness link

imlib_cache_size 0
double_buffer yes
no_buffers yes
background yes

format_human_readable

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Product Sans:size=9
override_utf8_locale yes
text_buffer_size 4096
#text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 200
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

alignment top_right
gap_x 12
#gap_x 25
gap_y 40
minimum_size 182 1000
maximum_width 182

default_bar_size 60 8

#########################
# - Graphics settings - #
#########################
draw_shades yes
stippled_borders 1

default_color 1793d0
color0 white
color1 1793d0
color2 white
color3 1793d0

TEXT

#Top Title Section
${font openlogos:size=20}${font Arial:size=20}PREIS${color Ivory}SCHILD${font openlogos:size=20}
${font Product Sans:style=Bold:size=14}SYSTEM $hr${font}
##############
# - SYSTEM - #
##############
${voffset -50}
${color DimGray}
${font}

$font${color White}$sysname $kernel $alignr $machine
CPU  $alignr${freq_g cpu0}Ghz
Uptime $alignr${uptime}
Dateisystem $alignr${fs_type}

# |--CPU
#CPU Section
${font Product Sans:style=Bold:size=14}PROZESSOR $hr${font}
${font Product Sans:style=Bold:size=8}${color}CPU1:  ${font}${color2}${cpu cpu1}%${alignc -50}${exec sensors | grep 'Core 0' | cut -c17-18}째C ${alignr}${voffset -2}${cpugraph cpu1 8,60 1793d0 ffffff}${color}
${font Product Sans:style=Bold:size=8}${color}CPU2:  ${font}${color2}${cpu cpu2}%${alignc -50}${exec sensors | grep 'Core 1' | cut -c17-18}째C ${alignr}${voffset -2}${cpugraph cpu2 8,60 1793d0 ffffff}${color}
${font Product Sans:style=Bold:size=8}${color}CPU3:  ${font}${color2}${cpu cpu3}%${alignc -50}${exec sensors | grep 'Core 2' | cut -c17-18}째C ${alignr}${voffset -2}${cpugraph cpu3 8,60 1793d0 ffffff}${color}
${font Product Sans:style=Bold:size=8}${color}CPU4:  ${font}${color2}${cpu cpu4}%${alignc -50}${exec sensors | grep 'Core 3' | cut -c17-18}째C ${alignr}${voffset -2}${cpugraph cpu4 8,60 1793d0 ffffff}${color}

${voffset 5}
# |--MEM
${font Product Sans:style=Bold:size=14}${color White}RAM $hr${font}
$font${color}MEM $alignc $mem / $memmax $alignr $memperc%
${color White}${membar 10, 180}
###############
# - NETWORK - #
###############
${font Product Sans:bold:size=14}${voffset 10}NETZWERK $hr${font}
${voffset 6}${font Product Sans:bold:size=8}${color}IPv4: ${color white}${execi 10800 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//'}
${color0}${downspeedgraph enp4s0 1793d0 ffffff}${color}
${font Product Sans:style=Bold:size=8}Download: ${font}${font Product Sansd:size=8}${color2}${downspeed enp4s0}${font}${color} ${font Product Sans:style=Bold:size=8}$alignr Total: ${font}${color2}${font Product Sans:size=8}${totaldown wlp3s0}${font}${color}
${color0}${upspeedgraph enp4s0 1793d0 ffffff}
${color1}${font Product Sans:style=Bold:size=8}Upload: ${color}${font}${font Product Sans:size=8}${color2}${upspeed enp4s0}${color} $alignr ${font Product Sans:style=Bold:size=8}Total: ${font}${color2}${font Product Sans:size=8}${totalup wlp3s0}${color}
#############
# - CLOCK - #
#############
${voffset 10}${font Product Sans:style=Bold:size=14}${color White}DATUM $hr${font}
${voffset 10}${alignc}${color}${font Product Sans Bold:style=Bold:size=40}${time %H:%M}${font} ${time %p}${color White}
${alignc 0}${time %d %B %Y}
#################
# - PROCESSES - #
#################
